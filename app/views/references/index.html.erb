<p id="notice"><%= notice %></p>

<h1>Listing References</h1>
<p> Total number of References: <%= @references.length %> </p>

<table>
  <thead>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Year</th>
    <th>Type</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @references.each do |r| %>
      <tr>
        <td><%= r.author %></td>
        <td><%= r.title %></td>
        <td><%= r.year %></td>
        <td><%= r.class.to_s %></td>
        <% if r.class.to_s == 'Article' %>
        <td><%= link_to 'Show', r %></td>
        <td><%= link_to 'Edit', edit_article_path(r) %></td>
        <td><%= link_to 'Destroy', r, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% if r.class.to_s == 'Book' %>
            <td><%= link_to 'Show', r %></td>
            <td><%= link_to 'Edit', edit_book_path(r) %></td>
            <td><%= link_to 'Destroy', r, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% if r.class.to_s == 'Inproceeding' %>
            <td><%= link_to 'Show', r %></td>
            <td><%= link_to 'Edit', edit_inproceeding_path(r) %></td>
            <td><%= link_to 'Destroy', r, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<pre>
  <% @references.each do |ref| %>
    <%= ref.generateBibtex %>
  <% end %>
</pre>


