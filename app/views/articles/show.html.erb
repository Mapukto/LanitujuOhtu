<script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.5/angular.min.js">
</script>

<p id="notice"><%= notice %></p>

<p>
  <strong>Author:</strong>
  <%= @article.author %>
</p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Journal:</strong>
  <%= @article.journal %>
</p>

<p>
  <strong>Year:</strong>
  <%= @article.year %>
</p>

<% if !(@article.tags.nil?) && !(@article.tags.empty?)  %>
    <p>
      <strong>Tags:</strong>
      <%= @article.tags %>
    </p>
<% end %>

<p>
  <strong>Volume:</strong>
    <%= @article.volume %>
</p>

<p>
  <strong>Number:</strong>
  <%= @article.number %>
</p>

<p>
  <strong>Pages:</strong>
  <%= @article.pages %>
</p>

<p>
  <strong>Month:</strong>
  <%= @article.month %>
</p>

<p>
  <strong>Note:</strong>
  <%= @article.note %>
</p>

<p>
  <strong>Key:</strong>
  <%= @article.akey %>
</p>

<pre>
<%= @article.generateBibtex %>
</pre>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
